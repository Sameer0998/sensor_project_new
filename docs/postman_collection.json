{
  "info": {
    "name": "Sensor Project API Collection",
    "description": "Postman collection for microservice-a and microservice-b endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Microservice B",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": { "raw": "http://localhost:8080/health", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["health"] }
          }
        },
        {
          "name": "Get Sensor Data by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": { "raw": "http://localhost:8080/api/sensor-data/123", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api", "sensor-data", "123"] }
          }
        },
        {
          "name": "Get Sensor Data with Filters",
          "request": {
            "method": "GET",
            "header": [],
            "url": { "raw": "http://localhost:8080/api/sensor-data?sensor_type=temperature&page=1&page_size=10", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api", "sensor-data"], "query": [ {"key": "sensor_type", "value": "temperature"}, {"key": "page", "value": "1"}, {"key": "page_size", "value": "10"} ] }
          }
        },
        {
          "name": "Delete Sensor Data by ID",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": { "raw": "http://localhost:8080/api/sensor-data/123", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api", "sensor-data", "123"] }
          }
        },
        {
          "name": "Delete Sensor Data by Filter",
          "request": {
            "method": "DELETE",
            "header": [ {"key": "Content-Type", "value": "application/json"} ],
            "body": { "mode": "raw", "raw": "{\n  \"sensor_type\": \"temperature\",\n  \"start_time\": \"2025-10-31T00:00:00Z\"\n}" },
            "url": { "raw": "http://localhost:8080/api/sensor-data", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api", "sensor-data"] }
          }
        }
      ]
    },
    {
      "name": "Microservice A",
      "item": [
        {
          "name": "Update Sensor Frequency",
          "request": {
            "method": "POST",
            "header": [ {"key": "Content-Type", "value": "application/json"} ],
            "body": { "mode": "raw", "raw": "{\n  \"interval_ms\": 1000\n}" },
            "url": { "raw": "http://localhost:8090/config/frequency", "protocol": "http", "host": ["localhost"], "port": "8090", "path": ["config", "frequency"] }
          }
        }
      ]
    }
  ]
}
